{
    "name": "blitz-php/tasks",
    "description": "Planificateur de t√¢ches pour BlitzPHP",
    "keywords": [
        "blitz-php",
        "tasks"
    ],
    "homepage": "https://github.com/blitz-php/tasks",
    "license": "MIT",
    "authors": [
        {
            "name": "Dimitri Sitchet Tomkeu",
            "email": "devcode.dst@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "kahlan/kahlan": "^5.2",
        "blitz-php/coding-standard": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "BlitzPHP\\Tasks\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BlitzPHP\\Tasks\\Spec\\": "spec"
        }
    },
    "scripts": {
        "test": "vendor/bin/kahlan",
        "test:cov": "vendor/bin/kahlan --coverage=3 --reporter=verbose --clover=clover.xml",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes",
		"analyze": [
            "Composer\\Config::disableProcessTimeout",
            "bash -c \"XDEBUG_MODE=off phpstan analyse\""
        ]
    },
    "scripts-descriptions": {
        "analyze": "Lance l'analyse statique du code du framework",
        "test": "Execute les tests unitaires",
        "format": "Corriger le style de codage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
